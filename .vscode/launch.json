    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: run.py",
            "type": "python",
            "request": "launch",
            "program": "run.py",
            "env": {
                "host_server": "localhost",
            },
            "jinja": true,
            "justMyCode": true,
        },
        {
            "name": "Python: FastAPI",
            "type": "python",
            "request": "launch",
            "module": "uvicorn",
            "env": {
                "host_server": "localhost",
            },
            "args": [
                "src.main:app",
                "--reload",
                "--port",
                "8000",
		"--log-config=src/log_conf.yaml"
            ],
            "jinja": true,
        }
    ]
}
